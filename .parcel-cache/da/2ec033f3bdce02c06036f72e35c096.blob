        incrementUp()
        function incrementUp() {
            if (milli == 1000) {
                sec += 1
            } else {
                milli += 100
            }

            if (sec == 59) {
                sec = 0
                min += 1
            } 

        }
        setInterval(function() { 
                minutes.textContent = min.toString()
                seconds.textContent = sec.toString()
                milliseconds.textContent = milli.toString()
                incrementUp()
        }, 100);